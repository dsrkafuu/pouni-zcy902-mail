<!DOCTYPE html>
<html>
  <head>
    <% var data={title:'商家注册'} %><% include ejs/head.ejs %>

    <script defer src="/assets/register-e.js"></script>
  </head>

  <body>
    <div class="register_con">
      <div class="l_con fl">
        <a href="index.html" class="reg_logo"
          ><img src="images/logo.png" width="150px" height="150px"
        /></a>
        <div class="reg_slogan">轻松开店 · 招财进宝</div>
        <div class="reg_banner"></div>
      </div>

      <div class="r_con fr">
        <div class="reg_title clearfix">
          <h1>商家注册</h1>
          <a href="login-e.html">登录</a>
        </div>
        <div class="reg_form clearfix">
          <form>
            <ul>
              <li>
                <label>商铺名称:</label>
                <input type="text" name="user_name" id="user_name" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>手机号码:</label>
                <input type="text" name="tel" id="tel" />
                <button id="get_otpCode" type="button">验证码</button>
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>验证码:</label>
                <input type="text" name="check" id="check" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>密码:</label>
                <input type="password" name="pwd" id="pwd" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>确认密码:</label>
                <input type="password" name="cpwd" id="cpwd" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>店铺地址:</label>
                <input type="text" name="address" id="address" />
                <span class="error_tip">提示信息</span>
              </li>
              <li class="agreement">
                <input
                  type="checkbox"
                  name="allow"
                  id="allow"
                  checked="checked"
                />
                <label>同意”QUALITY HOME用户使用协议“</label>
                <span class="error_tip2">提示信息</span>
              </li>
              <li class="reg_sub">
                <input type="button" value="注 册" name="" id="register_sub" />
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
    <br />

    <% data={nomp:true} %><% include ejs/footer.ejs %>
  </body>
</html>
