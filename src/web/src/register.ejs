<!DOCTYPE html>
<html>
  <head>
    <% var data={title:'用户注册'} %><% include ejs/head.ejs %>

    <script defer src="/assets/register.js"></script>
  </head>

  <body>
    <div class="register_con">
      <div class="l_con fl">
        <a href="index.html" class="reg_logo"
          ><img src="images/logo.png" width="150px" height="150px"
        /></a>
        <div class="reg_slogan">足不出户 · 轻松家装</div>
        <div class="reg_banner"></div>
      </div>

      <div class="r_con fr">
        <div class="reg_title clearfix">
          <h1>用户注册</h1>
          <a href="login.html">登录</a>
        </div>
        <div class="reg_form clearfix">
          <form>
            <ul>
              <li>
                <label>用户名:</label>
                <input type="text" name="user_name" id="user_name" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>手机号码:</label>
                <input type="text" name="tel" id="tel" />
                <button id="get_otpCode" type="button">验证码</button>
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>验证码:</label>
                <input type="text" name="check" id="check" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>密码:</label>
                <input type="password" name="pwd" id="pwd" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>确认密码:</label>
                <input type="password" name="cpwd" id="cpwd" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>性别：</label>
                <select id="gender">
                  <option value="1" selected="selected">男</option>
                  <option value="2">女</option>
                </select>
                <label> 年龄：</label>
                <input type="text" name="age" id="age" />
                <span class="error_tip">提示信息</span>
              </li>
              <li>
                <label>邮箱:</label>
                <input type="text" name="email" id="email" />
                <span class="error_tip">提示信息</span>
              </li>
              <li class="agreement">
                <input
                  type="checkbox"
                  name="allow"
                  id="allow"
                  checked="checked"
                />
                <label>同意”QUALITY HOME用户使用协议“</label>
                <span class="error_tip2">提示信息</span>
              </li>
              <li class="reg_sub" id="register_sub">
                <input type="button" value="注 册" name="" />
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
    <br />

    <% data={nomp:true} %><% include ejs/footer.ejs %>
  </body>
</html>
